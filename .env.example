# Environment Configuration
# Copy this file to .env and configure your values

# OpenAPI/Swagger spec URL (required)
OPENAPI_SPEC_URL=https://petstore.swagger.io/v2/swagger.json

# Bearer token for authenticated Swagger endpoints (optional)
SWAGGER_AUTH_TOKEN=

# Cache refresh interval in minutes (default: 10)
CACHE_REFRESH_MINUTES=10

# Rate limiting: max requests per minute (default: 60)
RATE_LIMIT_MAX=60

# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

# Server name for MCP protocol
MCP_SERVER_NAME=swagger-mcp-server
MCP_SERVER_VERSION=1.0.0
